{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "resolveJsonModule": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules/**/*"]
}
